<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Send to Computer"
    android:textSize="26dip"
    android:paddingBottom="5dip"
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="You can send web pages to web browser running on your computer using this program."
    android:textSize="16dip"
    android:paddingBottom="9dip"
    />
<LinearLayout android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/no_browser_id"
              android:visibility="gone"
              android:orientation="vertical">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="In browser on your computer open:"
    android:textSize="16dip"
    android:paddingBottom="0dip"
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="http://send-to-computer.appspot.com"
    android:textSize="19dip"
    android:paddingBottom = "9dip"
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Just scan the qr-code presented on the page and you can send links to that browser."
    android:textSize="16dip"
    />
</LinearLayout>
<LinearLayout android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+android:id/has_browser_id"
              android:orientation="vertical"
              android:visibility="gone">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Sent pages are available at:"
    android:textSize="16dip"
    android:paddingBottom = "3dip"
    />
<EditText  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text=""
    android:id="@+android:id/url"
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="You can copy and paste the url if you lost the link"
    android:textSize="16dip"
    android:paddingBottom = "3dip"
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="You have no unread pages on server."
    android:textSize="20dip"
    android:paddingBottom = "3dip"
    android:id="@+android:id/count"
    />
</LinearLayout>
</LinearLayout>
</ScrollView>
